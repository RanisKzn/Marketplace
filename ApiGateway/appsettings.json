{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "YourSecretKeyHere!YourSecretKeyHere!YourSecretKeyHere!"
  },
  "Routes": [

    {
      ///api/Auth/login
      "DownstreamPathTemplate": "/api/Auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Auth/login",
      "UpstreamHttpMethod": [ "POST" ]
    },
    ///api/Auth/register
    {
      "DownstreamPathTemplate": "/api/Auth/register",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Auth/register",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //api/Auth/refresh-token
    {
      "DownstreamPathTemplate": "/api/Auth/refresh-token",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Auth/refresh-token",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //api/Auth/logout
    {
      "DownstreamPathTemplate": "/api/Auth/logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "authservice",
          "Port": 80
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "UpstreamPathTemplate": "/gateway/Auth/logout",
      "UpstreamHttpMethod": [ "POST" ]
    },
    //api/Products
    {
      "DownstreamPathTemplate": "/api/Products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Products",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //api/Products/{Id}
    {
      "DownstreamPathTemplate": "/api/Products/{id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Products/{id}",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //api/Products
    {
      "DownstreamPathTemplate": "/api/Products",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Products",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedRoles": [ "Admin" ]
      }
    },
    //api/Products/{Id}
    {
      "DownstreamPathTemplate": "/api/Products/{Id}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "productservice",
          "Port": 80
        }
      ],
      "UpstreamPathTemplate": "/gateway/Products/{Id}",
      "UpstreamHttpMethod": [ "DELETE", "PUT" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedRoles": [ "Admin" ]
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://apigateway:80",
    "HttpHandlerOptions": {
      "AllowAutoRedirect": false,
      "UseCookieContainer": false,
      "UseTracing": false,
      "DangerousAcceptAnyServerCertificateValidator": true
    }
  }
}
